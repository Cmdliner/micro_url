<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>μrl - URL Shortener</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="/styles.css">

    <style>
        
    </style>
</head>
<body>
    <div class="main-content">
        <div class="container">
            <div class="logo">
                <i class="fas fa-link"></i>
                <h1>μrl</h1>
            </div>
            <form action="/shorten" method="POST">
                <div class="input-group">
                    <i class="fas fa-globe"></i>
                    <input type="url" name="original_url" placeholder="Enter your URL here" required>
                </div>
                <button type="submit">
                    <i class="fas fa-cut"></i>
                    Shorten URL
                </button>
            </form>
            <% if (locals.murl) { %>
                <div class="result">
                    Shortened URL: <a href="<%= murl %>" target="_blank"><%= murl %></a>
                    <button class="copy-btn" onclick="copyToClipboard('<%= murl %>')">
                        <i class="fas fa-copy"></i>
                        Copy
                    </button>
                </div>
            <% } %>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 μrl. All rights reserved. | <a href="/privacy">Privacy Policy</a> | <a href="/terms">Terms of Service</a></p>
    </footer>

    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert('Copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy: ', err);
            });
        }
    </script>
</body>
</html>